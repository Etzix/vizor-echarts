	// see https://echarts.apache.org/examples/en/editor.html?c=pie-borderRadius

	private ChartOptions options = new()
		{
			Tooltip = new()
			{
				Trigger = TooltipTrigger.Item
			},
			Legend = new()
			{
				Top = "5%",
				Left = "center"
			},
			Series = new()
			{
				new PieSeries()
				{
					Name = "Access From",
					Radius = new CircleRadius("40%", "70%"),
					AvoidLabelOverlap = false,
					ItemStyle = new()
					{
						BorderRadius = 10,
						BorderColor = "#fff",
						BorderWidth= 2
					},
					Label = new()
					{
						Show = false,
						Position = LabelPosition.Center
					},
					LabelLine = new ()
					{
						Show = false
					},
