@page "/example/radar/simple"

@using Vizor.ECharts;

<PageHeader Title="Simple Radar Chart" ChartType="@typeof(RadarSimple)" />

<Vizor.ECharts.EChart Options="@options" Width="800px" Height="800px" />

@code {

    // see https://echarts.apache.org/examples/en/editor.html?c=radar

    private ChartOptions options = new()
		{
            Title = new()
            {
                Text = "Basic Radar Chart"
            },
            Legend = new()
            {
                Data = new string[] { "Allocated Budget", "Actual Spending" }
            },
            Radar = new Radar()
            {
                Indicator = new List<RadarIndicator>()
                {
                    new() { Name = "Sales", Max = 6500 },
                    new() { Name = "Administration", Max = 16000 },
                    new() { Name = "Information Technology", Max = 30000 },
                    new() { Name = "Customer Support", Max = 38000 },
                    new() { Name = "Development", Max = 52000 },
                    new() { Name = "Marketing", Max = 25000 }
                }
            },
			Series = new()
			{
				new RadarSeries()
				{
                    Name = "Budget vs spending",
					Data = new List<RadarSeriesData>()
                    {
                        new RadarSeriesData()
                        {
                            Value = new int[] { 4200, 3000, 20000, 35000, 50000, 18000 },
                            Name = "Allocated Budget"
                        },
                         new RadarSeriesData()
                        {
                            Value = new int[] { 5000, 14000, 28000, 26000, 42000, 21000 },
                            Name = "Actual Spending"
                        }
                    }
				}
			}
		};
}
