@using Vizor.ECharts;

<Vizor.ECharts.EChart Options="@options" Width="800px" Height="400px" />

@code {

	// see https://echarts.apache.org/examples/en/editor.html?c=bar-gradient

	private readonly static string[] dataAxis = new[] { "点", "击", "柱", "子", "或", "者", "两", "指", "在", "触", "屏", "上", "滑", "动", "能", "够", "自", "动", "缩", "放" };
	private readonly static int[] data = new[] { 220, 182, 191, 234, 290, 330, 310, 123, 442, 321, 90, 149, 210, 122, 133, 334, 198, 123, 125, 220 };

	private ChartOptions options = new()
		{
			Title = new()
			{
				Text = "特性示例：渐变色 阴影 点击缩放",
				Subtext = "Feature Sample: Gradient Color, Shadow, Click Zoom"
			},
			XAxis = new()
			{
				Data = dataAxis,
				AxisLabel = new()
				{
					Inside = true,
					Color = "#fff"
				},
				AxisTick = new()
				{
					Show = false
				},
				AxisLine = new()
				{
					Show = false
				},
				Z = 10
			},
			YAxis = new()
			{
				AxisLabel = new()
				{
					Color = "#999"
				},
				AxisTick = new()
				{
					Show = false
				},
				AxisLine = new()
				{
					Show = false
				},
			},
			Series = new()
			{
				new BarSeries()
				{
					Data = data,
					ShowBackground = true,
					ItemStyle = new()
					{
						Color = new LinearGradient(0, 0, 0, 1, new GradientColorStop[]
						{
							new(0, "#83bff6"),
							new(0.5, "#188df0"),
							new(1, "#188df0")
						})
					},
					Emphasis = new()
					{
						ItemStyle = new()
						{
							Color = new LinearGradient(0, 0, 0, 1, new GradientColorStop[]
							{
								new(0, "#2378f7"),
								new(0.7, "#2378f7"),
								new(1, "#83bff6")
							})
						}
					}
				}
			}
		};
}